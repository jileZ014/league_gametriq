{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps --no-optional",
  "buildCommand": "echo 'Build complete'",
  "framework": null,
  
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "homepage.html",
      "use": "@vercel/static"
    },
    {
      "src": "dashboard.html", 
      "use": "@vercel/static"
    },
    {
      "src": "login.html",
      "use": "@vercel/static"
    },
    {
      "src": "register.html",
      "use": "@vercel/static"
    },
    {
      "src": "teams.html",
      "use": "@vercel/static"
    }
  ],
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/dashboard",
      "dest": "/dashboard.html"
    },
    {
      "src": "/login",
      "dest": "/login.html"
    },
    {
      "src": "/register", 
      "dest": "/register.html"
    },
    {
      "src": "/teams",
      "dest": "/teams.html"
    },
    {
      "src": "/",
      "dest": "/homepage.html"
    }
  ],
  
  "env": {
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
    "PUPPETEER_SKIP_DOWNLOAD": "true",
    "puppeteer_skip_chromium_download": "true",
    "NODE_ENV": "production"
  },
  
  "build": {
    "env": {
      "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
      "PUPPETEER_SKIP_DOWNLOAD": "true",
      "puppeteer_skip_chromium_download": "true",
      "NODE_ENV": "production",
      "CI": "true"
    }
  }
}