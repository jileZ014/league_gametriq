{
  "name": "gametriq-league-app",
  "version": "1.0.0",
  "description": "Basketball League Management Platform - Comprehensive youth basketball league management system for Phoenix market",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "next dev -p 4000",
    "dev:api": "cd apps/api && npm run start:dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:mobile": "cd apps/mobile && npm start",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "build:mobile": "cd apps/mobile && npm run build",
    "start": "npm run start:api & npm run start:web",
    "start:api": "cd apps/api && npm run start:prod",
    "start:web": "cd apps/web && npm run start",
    "lint": "npm run lint:api && npm run lint:web",
    "lint:api": "cd apps/api && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "lint:fix": "npm run lint:api -- --fix && npm run lint:web -- --fix",
    "typecheck": "npm run typecheck:api && npm run typecheck:web",
    "typecheck:api": "cd apps/api && npm run build",
    "typecheck:web": "cd apps/web && npm run type-check",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --config=jest.config.js",
    "test:integration": "cd apps/api && npm run test:integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:smoke": "playwright test tests/e2e/smoke.spec.ts",
    "test:performance": "cd apps/web && npm run test:public:perf",
    "test:accessibility": "cd apps/web && npm run test:public:a11y",
    "test:mobile": "cd apps/mobile && npm test",
    "db:migrate": "cd apps/api && npm run migration:run",
    "db:seed": "cd apps/api && npm run seed",
    "db:reset": "cd apps/api && npm run schema:drop && npm run migration:run && npm run seed",
    "docker:build": "docker build -f infrastructure/docker/Dockerfile.service -t gametriq-league .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy:staging": "npm run build && npm run deploy:staging:api && npm run deploy:staging:web",
    "deploy:production": "npm run build && npm run deploy:prod:api && npm run deploy:prod:web",
    "deploy:netlify": "cd apps/web && npm run build && netlify deploy --prod",
    "deploy:netlify:preview": "cd apps/web && npm run build && netlify deploy",
    "netlify:init": "netlify init",
    "netlify:dev": "netlify dev",
    "clean": "npm run clean:deps && npm run clean:build",
    "clean:deps": "rimraf node_modules apps/*/node_modules",
    "clean:build": "rimraf apps/*/dist apps/*/.next apps/*/build",
    "setup": "npm install && npm run setup:env && npm run db:migrate && npm run db:seed",
    "setup:env": "cpx .env.example .env && cpx apps/web/.env.example apps/web/.env.local",
    "health": "curl -f http://localhost:4000/api/health || exit 1",
    "workspace:install": "npm install && cd apps/api && npm install && cd ../web && npm install && cd ../mobile && npm install",
    "workspace:update": "npm update && cd apps/api && npm update && cd ../web && npm update && cd ../mobile && npm update",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "postinstall": "husky install || true"
  },
  "workspaces": [
    "apps/api",
    "apps/web",
    "apps/mobile",
    "services/*",
    "packages/*"
  ],
  "dependencies": {
    "@stripe/react-stripe-js": "^2.4.0",
    "@stripe/stripe-js": "^2.4.0",
    "@supabase/supabase-js": "^2.39.1",
    "@supabase/ssr": "^0.5.1",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "framer-motion": "^11.3.8",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stripe": "^14.15.0",
    "tailwind-merge": "^2.4.0",
    "zod": "^3.23.8",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.19.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^30.0.5",
    "lint-staged": "^15.2.7",
    "playwright": "^1.54.2",
    "playwright-core": "^1.54.2",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "rimraf": "^5.0.5",
    "copyfiles": "^2.4.1",
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.6",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "basketball",
    "league",
    "management",
    "youth-sports",
    "tournament",
    "scheduling",
    "scoring",
    "phoenix",
    "nextjs",
    "react",
    "typescript",
    "stripe",
    "supabase"
  ],
  "author": {
    "name": "Gametriq Team",
    "email": "support@gametriq.com",
    "url": "https://gametriq.com"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/gametriq/league-app.git"
  },
  "bugs": {
    "url": "https://github.com/gametriq/league-app/issues"
  },
  "homepage": "https://gametriq.com"
}
