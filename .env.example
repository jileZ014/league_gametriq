# Basketball League Management Platform - Environment Variables

# ================================
# APPLICATION CONFIGURATION
# ================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:4000
NEXT_PUBLIC_API_URL=http://localhost:3001

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://username:password@localhost:5432/basketball_league_dev
DATABASE_POOL_SIZE=20
DATABASE_SSL=false

# ================================
# AUTHENTICATION & SECURITY
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:4000
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production

# ================================
# STRIPE PAYMENT CONFIGURATION
# ================================
# Get these from your Stripe Dashboard
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Connect settings for referee payments
STRIPE_CONNECT_CLIENT_ID=ca_your_connect_client_id_here

# Basketball-specific payment settings
DEFAULT_REGISTRATION_FEE=150.00
DEFAULT_TOURNAMENT_FEE=75.00
LATE_REGISTRATION_FEE=25.00
PLATFORM_FEE_PERCENTAGE=0.05

# ================================
# SUPABASE CONFIGURATION
# ================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ================================
# REDIS CONFIGURATION (for caching)
# ================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================
# EMAIL CONFIGURATION
# ================================
# SMTP settings for transactional emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email templates
FROM_EMAIL=noreply@gametriq.com
FROM_NAME=Gametriq Basketball League
SUPPORT_EMAIL=support@gametriq.com

# ================================
# AWS S3 CONFIGURATION
# ================================
# For storing team logos, player photos, etc.
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=basketball-league-assets
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# ================================
# PUSH NOTIFICATIONS
# ================================
# Firebase Cloud Messaging for mobile push notifications
FCM_SERVER_KEY=your-fcm-server-key
NEXT_PUBLIC_FCM_VAPID_KEY=your-vapid-key

# Apple Push Notifications (for iOS)
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.gametriq.basketball

# ================================
# BASKETBALL LEAGUE CONFIGURATION
# ================================
# Phoenix-specific settings
DEFAULT_LEAGUE_ID=phoenix-youth-basketball
DEFAULT_SEASON_ID=2024-summer
DEFAULT_TIMEZONE=America/Phoenix

# Heat safety monitoring (Phoenix-specific)
WEATHER_API_KEY=your-weather-api-key
HEAT_SAFETY_ENABLED=true
HEAT_WARNING_THRESHOLD=100
HEAT_DANGER_THRESHOLD=110

# Court booking integration
COURT_BOOKING_API_URL=https://api.phoenixparks.gov/courts
COURT_BOOKING_API_KEY=your-court-booking-api-key

# ================================
# REAL-TIME FEATURES
# ================================
# WebSocket configuration for live scoring
WEBSOCKET_PORT=3002
WEBSOCKET_CORS_ORIGIN=http://localhost:4000

# Socket.IO settings
SOCKET_IO_ENABLED=true
SOCKET_IO_ADAPTER=redis

# ================================
# ANALYTICS & MONITORING
# ================================
# Application monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=GA-XXXXXXXXX

# Vercel Analytics (if deploying to Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS=false

# ================================
# FEATURE FLAGS
# ================================
# Enable/disable features for different environments
ENABLE_TOURNAMENT_BRACKETS=true
ENABLE_LIVE_SCORING=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_MOBILE_APP=true
ENABLE_AI_ANALYTICS=false
ENABLE_HEAT_MONITORING=true
ENABLE_REFEREE_PORTAL=true
ENABLE_PARENT_NOTIFICATIONS=true

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API-specific rate limits
API_RATE_LIMIT_SCORING=60
API_RATE_LIMIT_PAYMENTS=30
API_RATE_LIMIT_REGISTRATION=20

# ================================
# COPPA COMPLIANCE
# ================================
# Settings for youth player privacy protection
COPPA_COMPLIANCE_ENABLED=true
MINIMUM_AGE_CONSENT=13
PARENTAL_CONSENT_REQUIRED=true
DATA_RETENTION_PERIOD_DAYS=2555

# ================================
# LOGGING
# ================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/app.log

# Specific logging levels
LOG_LEVEL_DATABASE=warn
LOG_LEVEL_PAYMENT=info
LOG_LEVEL_AUTH=info
LOG_LEVEL_WEBSOCKET=warn

# ================================
# DEVELOPMENT TOOLS
# ================================
# Bundle analyzer (set to true to enable)
ANALYZE=false

# Debug modes
DEBUG_PAYMENTS=false
DEBUG_WEBSOCKETS=false
DEBUG_DATABASE=false

# Playwright testing
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_BROWSER=chromium

# ================================
# PRODUCTION OVERRIDES
# ================================
# These should be overridden in production

# Database
# DATABASE_URL=postgresql://prod_user:prod_pass@prod_host:5432/basketball_league_prod
# DATABASE_SSL=true

# Security
# JWT_SECRET=production-jwt-secret-change-this
# NEXTAUTH_SECRET=production-nextauth-secret

# URLs
# NEXT_PUBLIC_APP_URL=https://gametriq.com
# NEXTAUTH_URL=https://gametriq.com

# Stripe (production keys)
# STRIPE_SECRET_KEY=sk_live_your_live_secret_key
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key

# Monitoring
# SENTRY_ENVIRONMENT=production
# LOG_LEVEL=warn

# ================================
# NOTES
# ================================
# 1. Never commit this file with real secrets
# 2. Copy this to .env.local and fill in your values
# 3. Different environments (dev/staging/prod) should have different values
# 4. Use environment-specific .env files for different deployments
# 5. Stripe test keys start with sk_test_ and pk_test_
# 6. Stripe live keys start with sk_live_ and pk_live_
# 7. Always use test keys in development
# 8. Phoenix is in MST (no daylight saving), use America/Phoenix timezone