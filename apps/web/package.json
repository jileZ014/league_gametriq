{
  "name": "@gametriq/web",
  "version": "1.0.0",
  "private": true,
  "description": "Basketball League Management Platform - Web Application",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "test:persistent:smoke": "node tools/runPersistentSmoke.js",
    "test:persistent:headed": "node tools/runHeadedReview.js",
    "test:persistent:modern": "UI_MODERN_V1=1 node tools/runPersistentSmoke.js",
    "test:persistent:headed:modern": "UI_MODERN_V1=1 node tools/runHeadedReview.js",
    "test:smoke": "UI_MODERN_V1=1 PERSISTENT_MODE=1 playwright test tests/e2e/smoke-persistent.spec.ts --project=chromium",
    "test:smoke:headed": "UI_MODERN_V1=1 HEADLESS=0 PERSISTENT_MODE=1 playwright test tests/e2e/smoke-persistent.spec.ts --project=chromium --headed",
    "test:smoke:video": "UI_MODERN_V1=1 RECORD_VIDEO=1 PERSISTENT_MODE=1 playwright test tests/e2e/smoke-persistent.spec.ts --project=chromium",
    "pw:clean": "rm -rf .pw-user artifacts/playwright/screenshots/* artifacts/playwright/traces/* artifacts/playwright/videos/*",
    "pw:report": "playwright show-report artifacts/playwright/html",
    "pw:trace": "playwright show-trace",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
