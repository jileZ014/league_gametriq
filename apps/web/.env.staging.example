# Gametriq Staging Environment Variables
# Copy this file to .env.staging and fill in the actual values
# DO NOT commit .env.staging to version control

# Application
NODE_ENV=staging
APP_NAME=Gametriq
APP_URL=https://staging.gametriq.com
API_URL=https://api-staging.gametriq.com
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@staging-db.gametriq.com:5432/gametriq_staging
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=true

# Redis
REDIS_URL=redis://staging-redis.gametriq.com:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_TLS=true

# Authentication
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d
SESSION_SECRET=your_session_secret_here

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Stripe (Test Mode for Staging)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_API_VERSION=2023-10-16

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=gametriq-staging-assets
AWS_CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_id

# Email
EMAIL_FROM=noreply@staging.gametriq.com
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_VERIFICATION_URL=https://staging.gametriq.com/verify-email

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:support@gametriq.com

# Feature Flags
FEATURE_FLAGS_ENDPOINT=https://api-staging.gametriq.com/v1/flags
FEATURE_FLAGS_API_KEY=your_feature_flags_api_key
FEATURE_FLAGS_CACHE_TTL=300

# Monitoring
SENTRY_DSN=https://your_sentry_key@sentry.io/project_id
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=0.1
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=Gametriq-Staging

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token
SEGMENT_WRITE_KEY=your_segment_write_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Security
CORS_ALLOWED_ORIGINS=https://staging.gametriq.com,https://admin-staging.gametriq.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_CREDENTIALS=true
HELMET_CSP_DIRECTIVES={"defaultSrc":["'self'"],"scriptSrc":["'self'","'unsafe-inline'","https://js.stripe.com"]}

# API Keys
INTERNAL_API_KEY=your_internal_api_key_for_service_communication
WEBHOOK_SIGNING_SECRET=your_webhook_signing_secret

# Caching
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER_PROFILE=1800
CACHE_TTL_TOURNAMENT_LIST=300
CACHE_TTL_LEADERBOARD=60

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_RATE_LIMIT=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_ROTATION_MAX_SIZE=100m
LOG_ROTATION_MAX_AGE=7d

# Performance
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
ENABLE_ETAG=true
CLUSTER_WORKERS=2

# Testing
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/gametriq_test
TEST_REDIS_URL=redis://localhost:6379/1

# Third-party Services
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance. Please check back soon.
MAINTENANCE_ALLOWED_IPS=192.168.1.1,10.0.0.1

# Debug (set to false in production)
DEBUG=true
DEBUG_SQL=false
DEBUG_CACHE=false
DEBUG_PERFORMANCE=true